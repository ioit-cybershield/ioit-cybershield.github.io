---
import Navbar from '@/components/general/Navbar';
import Layout from '../layouts/Layout.astro';
import HeroSection from '@/components/landing/Hero';
import AboutSection from '@/components/landing/About';
import LenisProvider from '@/providers/lenis-provider';
import TimelineSpinner from '@/components/landing/Timeline';
import Gallery from "@/components/landing/Gallery"
import Footer from "@/components/general/Footer"
import Preloader from '@/components/ui/preloader';
import CTA from '@/components/landing/CTA';


// Import content
import { heroContent } from '@/content/hero';
import { navbarContent } from '@/content/nav';
import { aboutContent } from '@/content/about';
import { galleryContent } from '@/content/gallery';
import { TIMELINE_STATES } from '@/content/timeline';
import { ctaContent } from '@/content/cta';
import { footerContent } from '@/content/footer';
---

<Layout>
  <Preloader client:load />
  <LenisProvider client:load>
    <Navbar navbarContent={navbarContent} client:idle={{timeout:200}}/>
    <HeroSection heroContent={heroContent} client:idle={{timeout:300}}/>
    <AboutSection aboutContent={aboutContent} client:visible={{rootMargin: "200px"}} />
    <Gallery galleryContent={galleryContent} client:visible={{rootMargin: "200px"}}/>
    <TimelineSpinner timelineStates={TIMELINE_STATES} client:load />
    <CTA ctaContent={ctaContent} client:visible={{rootMargin: "200px"}}/>
    <Footer footerContent={footerContent} client:visible={{rootMargin: "200px"}} />
  </LenisProvider>
</Layout>
